<UserControl x:Class="BG_BIM_Interface.UI.Main.BgBimInterfaceMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
             xmlns:local="clr-namespace:BG_BIM_Interface.UI.Main"
             xmlns:controls="clr-namespace:BG_BIM_Interface.ViewModels.Controls;assembly=BG_BIM_Interface.ViewModels"
             xmlns:localControls="clr-namespace:BG_BIM_Interface.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Expander
                      VerticalAlignment="Stretch"
                      Background="DarkGray"
                      Header="Expander-01"  
                      TextBlock.FontSize="20"
                      Grid.Row="1" Margin="0,0.4,0,0" HorizontalAlignment="Right" Width="780">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="384*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer ScrollChanged="ScrollViewer_ScrollChanged" Grid.ColumnSpan="2" Margin="0,50,0.4,0" Grid.RowSpan="2">
                        <ItemsControl Margin="0,5" ItemsSource="{Binding Test}">
                            <ItemsControl.Resources>
                                <DataTemplate DataType="{x:Type controls:CardViewModel_A}">
                                    <localControls:myCard_A/>
                                </DataTemplate>
                            </ItemsControl.Resources>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Expander>
            <Expander HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Background="DarkGray"
                      Header="Expander-02"
                      TextBlock.FontSize="20"
                      Grid.Row="2" Margin="0,0,0,0.2" Width="780">

            </Expander>
            <Expander HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Background="DarkGray"
                      Header="Expander-03"
                      TextBlock.FontSize="20"
                      Grid.Row="3" Margin="0,0,0,0.2" Width="780">

            </Expander>
            <Expander
                      VerticalAlignment="Stretch"
                      Background="DarkGray"
                      Header="Expander-04"
                      TextBlock.FontSize="20"
                      Grid.Row="4" Margin="0,0.4,0,-0.2"/>
        </Grid>
    </Grid>
</UserControl>
